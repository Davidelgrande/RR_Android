<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FDFAFA"
        android:backgroundTint="#000000"
        app:srcCompat="@drawable/fondo"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="394dp"
        android:layout_height="117dp"
        android:layout_marginTop="336dp"
        android:background="#5CBF3434"
        android:backgroundTint="#7C2F2F"
        android:fontFamily="@font/arimo_bold"
        android:foregroundTint="#00D16B6B"
        android:shadowColor="#454545"
        android:text="ALGORITMO  DE PLANIFICACION "
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="357dp"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="104dp"
        android:background="#5CBF3434"
        android:backgroundTint="#6A3C08F4"
        android:fontFamily="@font/arimo_bold"
        android:foregroundTint="#00D16B6B"
        android:shadowColor="#454545"
        android:text="ROUND ROBIN"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="328dp"
        android:backgroundTint="#D0000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@android:drawable/ic_media_play" />

</androidx.constraintlayout.widget.ConstraintLayout>